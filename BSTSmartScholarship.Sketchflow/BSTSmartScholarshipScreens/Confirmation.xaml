<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:BSTSmartScholarshipScreens"
	mc:Ignorable="d"
	x:Class="BSTSmartScholarshipScreens.Confirmation"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot" Background="White">
		<local:Header Margin="8,8,279,0" VerticalAlignment="Top" Width="Auto" d:IsPrototypingComposition="True"/>
		<TextBlock HorizontalAlignment="Left" Margin="152,115,0,0" Style="{StaticResource TitleCenter-Sketch}" TextWrapping="Wrap" Text="Thank you for applying" VerticalAlignment="Top"/>
		<TextBlock HorizontalAlignment="Left" Margin="150,168,0,0" Style="{StaticResource TextBlock-Sketch}" TextWrapping="Wrap" Text="You will be notified via email of the status of your application" VerticalAlignment="Top"/>
	</Grid>
</UserControl>